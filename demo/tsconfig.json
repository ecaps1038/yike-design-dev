{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "composite": true,
    "jsx": "preserve",
    "allowJs": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "@yike-design/ui": ["../packages/yike-design-ui"]
    }
  },
  "include": ["**/*", "**/*.json", "./components.d.ts"],
  "exclude": ["dist", "node_modules"]
}
